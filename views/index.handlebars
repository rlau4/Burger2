<h1>Om Nom Nom Burgers!</h1>

<h2>To Be Devoured!</h2>
<ul> {{#each burgers}}
    {{#unless devoured}}
    {{>burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Already Devoured!</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=flase}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>